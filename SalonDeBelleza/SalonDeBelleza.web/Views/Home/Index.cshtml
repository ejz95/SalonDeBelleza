<!-- section -->
<div id="contact" class="section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 padding_left_0">
                <div class="full">
                    <img class="float-left" src="~/jof/images/Calendario.jpg" alt="#" width=900 />
                </div>
            </div>
            <div class="col-md-6">
                <div class="heading">
                    <h2>RESERVA TU <strong class="theme_blue">CITA YA!</strong></h2>
                </div>
